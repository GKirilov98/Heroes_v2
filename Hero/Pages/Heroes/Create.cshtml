@page
@model Hero.Pages.Heroes.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="container">
	<h1 class="text-center">Create Hero</h1>
	<form class="mx-auto w-100 bg-blur mb-5" method="post">
		<div class="form-group">
			<div class="label-holder textCol d-flex justify-content-center">
				<label for="name" class="h4 mb-2 text-white">Name</label>
			</div>
			<input type="text" class="form-control mx-auto w-25" id="name" name="name" />
		</div>
		<div class="form-group">
			<div class="row">
				<div class="col-sm-3"></div>
				<label for="male">
					<div class="ml-lg-5">
						<img src="/img/male.jpg" class="border border-secondary img-gender" alt="male image"
							 height="300"
							 width="200" />
					</div>
				</label>
				<label for="female">
					<div class="ml-lg-5">
						<img src="/img/female.jpg" class="border border-secondary img-gender" alt="female image"
							 height="300" width="200" />
					</div>
				</label>
			</div>
			<div class="row">
				<div class="col col-md-4"></div>
				<div>
					<div class="col col-md-6 ml-lg-5">
						<label for="male">
							<h2 class="text-white">Male</h2>
						</label>
						<input type="radio" id="male" class="ml-lg-5" value="male" name="gender">
					</div>
				</div>
				<div>
					<div class="col col-md-6 ml-lg-5">
						<label for="female">
							<h2 class="text-white">Female</h2>
						</label>
						<input type="radio" id="female" class="ml-lg-5" value="female" name="gender">
					</div>
				</div>
			</div>
		</div>
		<div class="button-holder d-flex justify-content-center ">
			<button class="btn btn-secondary text-white mb-3" type="submit">Create hero</button>
		</div>
	</form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
