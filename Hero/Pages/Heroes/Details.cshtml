@page
@model Hero.Pages.Heroes.DetailsModel

@{
	ViewData["Title"] = "Details";
}

@using Hero.Entities;
<div class="container">
	<div class="text-center bg-blur">
		<h1>Hero</h1>
		<div>
			<div class="row">
				<div class="col-md-4">
					<h3 class="align-middle">@Model.Hero.Name</h3>
				</div>
				<div class="col-md-2">
					<h3 class="align-middle">|@Model.Hero.Level- Level|</h3>
				</div>
				<div class="col-md-5">
					@if (Model.Slots.Contains("helmet"))
					{
						<img src="/img/helmet.jpg" class="mr-5 mb-1" width="100" height="90">
					}

				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					@if (Model.Hero.Gender.Equals(Gender.Male))
					{
						<img src="/img/male.jpg" alt="photo" class="align-middle" width="150" />
					}
					else
					{
						<img src="/img/female.jpg" alt="photo" class="align-middle" width="150" />
					}
				</div>
				<div class="col-md-2">


					<p class="align-content-center">|Strength - @Model.Hero.Strength|</p>
					<p class="align-content-center">|Stamina - @Model.Hero.Stamina|</p>
					<p class="align-content-center">|Attack -  @Model.Hero.Attack|</p>
					<p class="align-content-center">|Defence -  @Model.Hero.Deffence|</p>
				</div>
				<div class="col-md-5">
					@if (Model.Slots.Contains("weapon"))
					{
						<img src="/img/weapon.jpg" width="100" height="150">
					}

					@if (Model.Slots.Contains("pauldron"))
					{
						<img src="/img/pauldron.jpg" width="100" height="150">
					}

					@if (Model.Slots.Contains("gauntlets"))
					{
						<img src="/img/gauntlet.jpg" class="mr-5" width="100" height="150">
					}
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
				</div>
				<div class="col-md-2">
				</div>
				<div class="col-md-5">
					@if (Model.Slots.Contains("pads"))
					{
						<img src="/img/pads.jpg" class="mr-5" width="100" height="150">
					}
				</div>
			</div>
		</div>
	</div>
</div>

<div class="button-holder d-flex justify-content-center mb-5 mt-1">
	<a class="btn btn-info text-white mb-3" href="/Index">Back to Home</a>
	@if (Program.currUser.Username.Equals("Admin"))
	{
		<a class="btn btn-outline-primary text-white mb-3 ml-3" href="./Index">Back to Hero List</a>
	}
</div>
