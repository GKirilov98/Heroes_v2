@page
@model Hero.Pages.Items.CreateModel

@{
	ViewData["Title"] = "Create";
}

< <h1 class="text-center">Create Item</h1>
<hr class="hr-3" />
<form class="mx-auto w-100 bg-blur " method="post">
	<div class="form-group">
		<div class="label-holder textCol d-flex justify-content-center">
			<label for="name" class="h4 mb-2 text-white">Name</label>
		</div>
		<input type="text" class="form-control mx-auto w-50" id="name" name="name" />
	</div>
	<div class="form-group">
		<div class="row flex-md-row">
			<div class="col col-sm-1"></div>
			<label for="weapon">
				<div class="ml-lg-5">
					<img src="/img/weapon.jpg" class="border border-secondary img-gender" alt="weapon" width="110"
						 height="100" />
				</div>
			</label>

			<label for="helmet">
				<div class="ml-lg-5">
					<img src="/img/helmet.jpg" class="border border-secondary img-gender" alt="helmet" width="110"
						 height="100" />
				</div>
			</label>

			<label for="pauldron">
				<div class="ml-lg-5">
					<img src="/img/pauldron.jpg" class="border border-secondary img-gender" alt="pauldron"
						 width="110"
						 height="100" />
				</div>
			</label>

			<label for="pads">
				<div class="ml-lg-5">
					<img src="/img/pads.jpg" class="border border-secondary img-gender" alt="legs" width="110"
						 height="100" />
				</div>
			</label>

			<label for="gauntlets">
				<div class="ml-lg-5">
					<img src="/img/gauntlet.jpg" class="border border-secondary img-gender" alt="gauntlet"
						 width="110"
						 height="100" />
				</div>
			</label>
		</div>
		<div class="row flex-md-row">
			<div class="col col-sm-1"></div>
			<div class="list-inline w-15">
				<div class="col col-md-6 ml-5">
					<label for="weapon">
						<h5 class="text-white">WEAPON</h5>
					</label>
					<input type="radio" class="ml-lg-5" id="weapon" value="WEAPON" name="slot">
				</div>
			</div>
			<div class="list-inline w-15">
				<div class="col col-md-6 ml-5">
					<label for="helmet">
						<h5 class="text-white">HELMET</h5>
					</label>
					<input type="radio" class="ml-lg-5" id="helmet" value="HELMET" name="slot">
				</div>
			</div>
			<div class="list-inline w-15">
				<div class="col col-md-6 ml-4">
					<label for="pauldron">
						<h5 class="text-white">PAULDRON</h5>
					</label>
					<input type="radio" class="ml-lg-5" id="pauldron" value="PAULDRON" name="slot">
				</div>
			</div>
			<div class="list-inline w-15">
				<div class="col col-md-6 ml-5">
					<label for="pads">
						<h5 class="text-white">PADS</h5>
					</label>
					<input type="radio" class="ml-lg-5" id="pads" value="PADS" name="slot">
				</div>
			</div>
			<div class="list-inline w-15">
				<div class="col col-md-6 ml-2">

					<label for="gauntlets">
						<h5 class="text-white">GAUNTLETS</h5>
					</label>
					<input type="radio" class="ml-lg-5" id="gauntlets" value="GAUNTLETS" name="slot">
				</div>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="row flex-md-row">
			<div class="col col-md-3">
				<label for="stamina" class="text-white">Stamina</label>
				<input type="number" id="stamina" class="w-25" name="stamina" placeholder="0" min="0" max="100"
					   value="0">
			</div>
			<div class="col col-md-3">
				<label for="strength" class="text-white">Strength</label>
				<input type="number" id="strength" class="w-25" name="strength" placeholder="0" min="0" max="100"
					   value="0">
			</div>
			<div class="col col-md-3">
				<label for="attack" class="text-white">Attack</label>
				<input type="number" id="attack" class="w-25" name="attack" placeholder="0" min="0" max="100"
					   value="0">
			</div>
			<div class="col col-md-3">
				<label for="defence" class="text-white">Defence</label>
				<input type="number" id="defence" class="w-25" name="defence" placeholder="0" min="0" max="100"
					   value="0">
			</div>
		</div>
	</div>
	<div class="button-holder d-flex justify-content-center">
		<button class="btn btn-secondary text-white mb-3" type="submit">Create Item</button>
	</div>
</form>
<div class="button-holder d-flex justify-content-center mb-5 mt-1">
	<a class="btn btn-info text-white mb-3" href="/Index">Back to Home </a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
