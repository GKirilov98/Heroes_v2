@page
@model Hero.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Item</h1>

<hr class="hr-3" />
<div class="row">
    <div  class="mx-auto col-md-4 bg-blur">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.ItemId" />
            <div class="form-group">
                <label asp-for="Item.Name" class="label-holder text-white d-flex justify-content-center h3 mb-2"></label>
                <input asp-for="Item.Name" class="form-control" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.SlotId" class="label-holder text-white d-flex justify-content-center h3 mb-2"></label>
                <select asp-for="Item.SlotId" class="form-control" asp-items="ViewBag.SlotId"></select>
                <span asp-validation-for="Item.SlotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Stamina" class="label-holder text-white d-flex justify-content-center h3 mb-2"></label>
                <input asp-for="Item.Stamina" class="form-control" />
                <span asp-validation-for="Item.Stamina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Strength" class="label-holder text-white d-flex justify-content-center h3 mb-2"></label>
                <input asp-for="Item.Strength" class="form-control" />
                <span asp-validation-for="Item.Strength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Attack" class="label-holder text-white d-flex justify-content-center h3 mb-2"></label>
                <input asp-for="Item.Attack" class="form-control" />
                <span asp-validation-for="Item.Attack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Defence" class="label-holder text-white d-flex justify-content-center h3 mb-2"></label>
                <input asp-for="Item.Defence" class="form-control" />
                <span asp-validation-for="Item.Defence" class="text-danger"></span>
            </div>
            <div class="button-holder d-flex justify-content-center">
                <input type="submit" value="Save" class="btn btn-primary text-white col-8" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
