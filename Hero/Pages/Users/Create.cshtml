@page
@model Hero.Pages.Users.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h1 class="text-center">Register</h1>
<hr class="hr-3" />
<form class="mx-auto col-md-4 bg-blur" method="post">
	<div class="form-group">
		<div class="label-holder textCol d-flex justify-content-center">
			<label asp-for="User.Username" for="username" class="h4 mb-2 text-white">Username</label>
		</div>
		<input asp-for="User.Username" type="text" class="form-control" id="username" name="username" />
	</div>
	<div class="form-group">
		<div class="label-holder text-white textCol d-flex justify-content-center">
			<label asp-for="User.Email" for="email" class="h4 mb-2">Email</label>
		</div>
		<input asp-for="User.Email" type="email" class="form-control" id="email" name="email" />
	</div>
	<div class="form-group">
		<div class="label-holder text-white textCol d-flex justify-content-center">
			<label asp-for="User.Password" for="password" class="h4 mb-2">Password</label>
		</div>
		<input type="password" class="form-control" id="password" name="password" />
	</div>
	<div class="form-group">
		<div class="label-holder text-white textCol d-flex justify-content-center">
			<label for="confirmPassword" class="h4 mb-2">Confirm Password</label>
		</div>
		<input class="form-control" type="password" id="confirmPassword" name="confirmPassword" />
	</div>
	<div class="button-holder d-flex justify-content-center mb-5">
		<button class="btn btn-info text-white col-8" type="submit">Register</button>
	</div>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
