@page
@model Hero.Pages.Users.LoginModel
@{
}

<h1 class="text-center">Login</h1>
<hr class="hr-3" />
<form class="mx-auto col-md-4 bg-blur" method="post">
	<div class="form-group">
		<div class="label-holder text-white d-flex justify-content-center">
			<label for="Username" class="h3 mb-2">Username</label>
		</div>
		<input type="text" class="form-control" id="Username" name="Username" />
	</div>
	<div class="form-group">
		<div class="label-holder text-white d-flex justify-content-center">
			<label for="Password" class="h3 mb-2">Password</label>
		</div>
		<input type="Password" class="form-control" id="Password" name="Password" />
	</div>
	<div class="button-holder d-flex justify-content-center">
		<button class="btn btn-info text-white col-8" type="submit">Login</button>
	</div>
</form>